<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" type="button" {{action 'hide' on="click"}}>x</button>
            <h4 class="modal-title">{{title}}</h4>
        </div>
        <div class="modal-body">
            {{yield}}
        </div>
        <div class="modal-footer">
            <button class="btn btn-danger" {{action 'save' on="click"}}>Save</button>
        </div>
    </div>
</div>