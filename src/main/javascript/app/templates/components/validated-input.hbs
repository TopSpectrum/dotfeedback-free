{{#if hasLabel}}
    <label class="control-label {{ labelWidthClasses }}">{{label}}</label>
{{else}}
    <label class="control-label {{ labelWidthClasses }} sr-only"></label>
{{/if}}

{{#if isTextarea}}
  {{textarea value=value focus-in='focused' focus-out='blurred' type=type class=inputClass placeholder=placeholder autocomplete=autocomplete enter='enter' readonly=readonly disabled=disabled}}
{{else}}
      <div class="{{ inputWidthClasses }}">
          {{#if isPhone}}
              {{intl-tel-input
                    value=value
                    focus-in='focused'
                    focus-out='blurred'
                    class=inputClass
                    placeholder=placeholder
                    autocomplete=autocomplete
                    enter='enter'
                    readonly=readonly
                    disabled=disabled
                    mask=mask
                    numberFormat=numberFormat
                    nationalMode=false
                    isValidNumber=isValidPhoneNumber}}

                v{{value}}
                f{{numberFormat}}
                p{{phoneNumber}}
                i{{isValidPhoneNumber}}
          {{else}}
              {{input value=value focus-in='focused' focus-out='blurred' type=type class=inputClass placeholder=placeholder autocomplete=autocomplete enter='enter' readonly=readonly disabled=disabled mask=mask}}
          {{/if}}
      </div>

{{/if}}

{{#if hasSubtext}}
    <span class="subtext muted text-muted">{{ subtext }}</span>
{{/if}}

{{#if hasFeedback}}
    <span class="glyphicon glyphicon-ok form-control-feedback form-control-feedback-not-error"></span>
    <span class="glyphicon glyphicon-warning-sign form-control-feedback form-control-feedback-only-error"></span>
{{/if}}

{{#if hasErrors}}
<div class="help-block with-errors">
    {{#each errors as |error|}}
        <div>{{error}}</div>
    {{/each}}
</div>
{{/if}}

{{yield}}
