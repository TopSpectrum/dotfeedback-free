<div class="whois-table form-horizontal">

    <div class="row">
        {{validated-input value=email errors=errors.email name='admin_email' label='Email' labelWidthClasses='col-sm-3' inputWidthClasses='col-sm-9' class="col-sm-12"  disabled=disabled muteInitialErrors=muteInitialErrors muteErrors=muteErrors}}

        {{#if model.emails}}
            <div class="form-group col-sm-12" style="padding-bottom: 25px;">
                <div class="col-sm-3">&nbsp;</div>
                <div class="col-sm-9">
                    <div class="row">
                        <label class="control-label col-sm-3">Suggestions</label>
                        <div class="col-sm-9" style="padding-top: 10px;">
                            {{#if model.emails}}
                                <ul>
                                {{#each model.emails as | email | }}
                                    <li><a href="#" {{action 'selectEmailAlternative' email}}>{{email}}</a></li>
                                {{/each}}

                                {{#if initialEmail}}
                                    <li><a href="#" {{action 'selectEmailAlternative' initialEmail}}>{{initialEmail}}</a></li>
                                {{/if}}
                            </ul>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}

        {{validated-input value=model.name errors=errors.name name='admin_name' label='Name' labelWidthClasses='col-sm-3' inputWidthClasses='col-sm-9' class="col-sm-12" disabled=disabled muteInitialErrors=muteInitialErrors muteErrors=muteErrors}}
        {{validated-input value=model.organization errors=errors.organization name='admin_organization' label='Organization' labelWidthClasses='col-sm-3' inputWidthClasses='col-sm-9' class="col-sm-12" disabled=disabled muteInitialErrors=muteInitialErrors muteErrors=muteErrors}}
        {{validated-input value=model.street errors=errors.street name='admin_street' label='Street' labelWidthClasses='col-sm-3' inputWidthClasses='col-sm-9' class="col-sm-12" disabled=disabled muteInitialErrors=muteInitialErrors muteErrors=muteErrors}}
        {{validated-input value=model.city errors=errors.city name='admin_city' label='City' labelWidthClasses='col-sm-3' inputWidthClasses='col-sm-9' class="col-sm-12" disabled=disabled muteInitialErrors=muteInitialErrors muteErrors=muteErrors}}

        {{validated-input value=model.state errors=errors.state name='admin_state' label='State/Prov' labelWidthClasses='col-sm-3' inputWidthClasses='col-sm-9' class="col-sm-12" disabled=disabled muteInitialErrors=muteInitialErrors muteErrors=muteErrors}}
        {{validated-input value=model.postal errors=errors.postal name='admin_postal' label='Postal' labelWidthClasses='col-sm-3' inputWidthClasses='col-sm-9' class="col-sm-12" disabled=disabled muteInitialErrors=muteInitialErrors muteErrors=muteErrors}}
        {{validated-input value=model.country errors=errors.country name='admin_country' label='Country' labelWidthClasses='col-sm-3' inputWidthClasses='col-sm-9' class="col-sm-12" disabled=disabled muteInitialErrors=muteInitialErrors muteErrors=muteErrors}}
        {{validated-input value=model.phone errors=errors.phone name='admin_phone' label='Phone' labelWidthClasses='col-sm-3' inputWidthClasses='col-sm-9' class="col-sm-12" disabled=disabled muteInitialErrors=muteInitialErrors muteErrors=muteErrors type='phone' isValidNumber=isValidNumber}}
    </div>
</div>