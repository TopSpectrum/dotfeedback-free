    <servlet>
        <servlet-name>ember-ui</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>java-api</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>java-api</servlet-name>
        <url-pattern>/api/v1/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>java-api</servlet-name>
        <url-pattern>/api/v1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>java-api</servlet-name>
        <url-pattern>/assets.fonts/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>java-api</servlet-name>
        <url-pattern>/assets.images/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>java-api</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>java-api</servlet-name>
        <url-pattern>/version</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ember-ui</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ember-ui</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>